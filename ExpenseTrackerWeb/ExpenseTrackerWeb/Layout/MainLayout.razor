@inherits LayoutComponentBase
@inject TokenAuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager NavigationManager

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
            <a href="#" @onclick="Logout" style="cursor: pointer; text-decoration: underline; color: blue;">
                Logout
            </a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    private async Task Logout()
    {
        await AuthenticationStateProvider.Logout();
        NavigationManager.NavigateTo("/login", true); // Redirect to login after logout
    }
}
